<!-- edit.html.erb has the @todo instance variable that the edit method
     in the TodosController prepared. -->

<h1>Edit Your Todo</h1>
<%= form_for @todo do |f| %>

  <%= label_tag(:title, "Title:") %>
  <%= f.text_field :title, :class => "form-control" %></br>

  <%= label_tag(:description, "Description") %>
  <%= f.text_area :description, :class => "form-control" %></br>

  <!-- TODO: Uncomment this once you have added a done field to the DB -->
  <!-- label_tag(:done, "Done?") -->
  <!-- f.check_box :done, {}, true, false %><br /-->
  <!-- END OF TODO -->

  <!-- Submits the @todo instance variables changes to the update
       method in the TodosControll -->
  <%= f.submit "Update", :class => "btn btn-warning" %>
<% end %>
