<h1>Todos Items List</h1>
<%= button_to "New Todo Item", {controller: :todos, action: :new}, :method => :get, :class => "btn btn-success" %>
<br>

<% @todos.each do |todo| %>

  <%= link_to todo["title"], todo_path(todo[:id]) %>

  <%= link_to "edit", edit_todo_path(todo[:id]) , :class => "btn btn-primary btn-xs" %>
  <%= link_to "delete", todo, method: :delete, data: { confirm: "You sure?" } , :class => "btn btn-danger btn-xs" %>
  <br>
  </br>

<% end %>
